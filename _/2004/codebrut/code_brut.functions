function NTHIFY() {

  sed -i 's/\b\([0-9]\+\)\([nthsrd]\{2\}\)\b/\1<sup class="nth">\2<\/sup>/g' $SRCDUMP

}

# --------------------------------------------------------------------------- #

function REF() {

  REFID=`echo $*             | # WHAT? 
         sed 's/^[ \t]*//'   | # REMOVE LEADING WHITESPACE
         sed 's/[ \t]*$//'   | # REMOVE TRAILING WHITESPACE
         md5sum | cut -c 1-10` # CREATE UNIQUE ID

  write2src "<span id=\"$REFID\" class=\"anchor\"></span>"

}

